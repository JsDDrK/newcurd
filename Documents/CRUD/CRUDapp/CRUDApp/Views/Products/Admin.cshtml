@{
    ViewData["Title"] = "Admin Login";
}

<h1>관리자 로그인</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Admin" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="id" class="control-label">관리자 아이디</label>
                <input type="text" id="id" name="id" class="form-control" />
            </div>
            <div class="form-group mt-3"> @* 비밀번호 입력란과의 간격 조정을 위해 mt-3 추가 *@
                <label for="password" class="control-label">관리자 비밀번호</label>
                <input type="password" id="password" name="password" class="form-control" />
                @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
                {
                    <span class="text-danger">@ViewData.ModelState[""].Errors.First().ErrorMessage</span>
                }
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>